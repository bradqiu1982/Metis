
@{
    ViewBag.Title = "ProductYield";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link type="text/css" rel="stylesheet" href="~/Scripts/jquery-autocomplete/jquery.auto-complete.css" />
<link type="text/css" rel="stylesheet" href="~/Content/SCRAP-RATE.css" />
<link type="text/css" rel="stylesheet" href="~/Scripts/bootstrap-tagsinput/bootstrap-tagsinput.css" />

<script type="text/javascript" src="~/Scripts/bootstrap-tagsinput/bootstrap-tagsinput.js"></script>
<script type="text/javascript" src="~/Scripts/bootstrap-tagsinput/bootstrap3-typeahead.js"></script>
<script type="text/javascript" src="~/Scripts/jquery-autocomplete/jquery.auto-complete.min.js"></script>
<script type="text/javascript" src="~/Scripts/YIELD.js"></script>
<script type="text/javascript">
        $(function(){
            YIELD.PRODUCTINIT();
        })
</script>


<div class="row">
    <div class="nav navbar-nav navbar-left">
        <img src="~/Content/images/Yield.png" style="height:40px; width:40px">
    </div>
    <div class="nav navbar-nav navbar-left">
        <ol class="breadcrumb" style="width:600px">
            <li><a data-toggle="tooltip" title="Goto Main Page" href="/Main/Index">Main</a></li>
            <li class="active">Product Yield</li>
        </ol>
    </div>
</div>

<div class="row">
    <nav class="col-xs-2 nav-sidebar">
        <ul class="nav">
            <li>
                <a href="/Yield/DepartmentYield">
                    <span class="item-show">Department Yield</span>
                </a>
            </li>
            <li class="active">
                <a href="/Yield/ProductYield">
                    <span class="item-show">Product Yield</span>
                </a>
            </li>
        </ul>
    </nav>
    <div class="col-xs-10">
        <div class="v-container">
            <div class="v-filter">
                <div class="row row-margin">
                    <label class="col-xs-2">Product Family</label>
                    <div class="col-xs-8">
                        <input type="text"  data-provide="typeahead"
                               id="yieldproductlist" name="yieldproductlist" autocomplete="off" placeholder="Product Family" value="">
                    </div>
                    <div class="col-xs-1 box-search" style="padding-left:0">
                        <input type="button" class="btn btn-success" name="btn-search" id="btn-search" value="Search">
                    </div>
                </div>
            </div>
            <div class="v-content">
               <table class="table table-hover  table-condensed table-striped" id="yieldmaintable" style="margin-top:1%">
                   <caption class="tb-caption">PRODUCT TEST YIELD TABLE</caption>
                   <thead id="yieldtabheadid"></thead>
                   <tbody id="yieldtabcontentid"></tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="hidden">
        <a id="exportLink"></a>
        <input type="text" class="hide" id="productfamily" name="productfamily" value="@ViewBag.productfamily">
    </div>
</div>


<div class="modal" id="testyieldmodal" tabindex="-1" role="dialog" aria-labelledby="testyieldmodalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="testyieldmodalLabel">Test Yield Info</h4>
            </div>
            <div class="row" style="margin-left:15px!important;margin-right:15px!important;">
                <table class="table table-hover  table-condensed table-striped" id="testyieldtable" style="margin-top:1%">
                    <caption class="tb-caption">TEST YIELD TABLE</caption>
                    <thead>
                        <tr>
                            <th>WhichTest</th>
                            <th>Failed</th>
                            <th>Pass</th>
                            <th>Yield</th>
                        </tr>
                    </thead>
                    <tbody id="testyieldcontentid"></tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
