
@{
    ViewBag.Title = "ShipMargin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link type="text/css" rel="stylesheet" href="~/Scripts/jquery-autocomplete/jquery.auto-complete.css" />
<link type="text/css" rel="stylesheet" href="~/Content/SCRAP-RATE.css" />
<link type="text/css" rel="stylesheet" href="~/Scripts/bootstrap-tagsinput/bootstrap-tagsinput.css" />
<link type="text/css" rel="stylesheet" href="~/Content/Layout.css" />
<link type="text/css" rel="stylesheet" href="~/Content/bootstrap-datepicker/bootstrap-datepicker.min.css" />

<style type="text/css">
    .DETAILINFO {
        cursor: pointer;
    }

    body {
        position: relative;
    }
</style>

<script type="text/javascript" src="~/Scripts/bootstrap-tagsinput/bootstrap-tagsinput.js"></script>
<script type="text/javascript" src="~/Scripts/bootstrap-tagsinput/bootstrap3-typeahead.js"></script>
<script type="text/javascript" src="~/Scripts/jquery-autocomplete/jquery.auto-complete.min.js"></script>
<script type="text/javascript" src="~/Scripts/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
<script type="text/javascript" src="~/Scripts/shipforecast.js"></script>
<script type="text/javascript">
        $(function(){
            FORECAST.MARGININIT();
        })
</script>

<input class="hide" type="text" id="hidetitle" name="hidetitle" value="SHIPMENT / SHIP Margin">

<div class="col-xs-12">
    <div class="v-container">
        <div class="v-filter">
            <div class="row row-margin">
                <label class="col-xs-2">Start Date</label>
                <div class="col-xs-3">
                    <div class="input-group date" data-date=""
                         data-date-format="yyyy-mm">
                        <input type="text" class="form-control"
                               id="sdate" name="sdate" value="" readonly>
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-th"></span>
                        </span>
                    </div>
                </div>
                <div class="col-xs-1"></div>
                <label class="col-xs-1">DATA</label>
                <div class="col-xs-3">
                    <select id="DATATYPE" name="DATATYPE" class="form-control">
                        <option selected value="BEST-MATCH">BEST-MATCH</option>
                        <option value="ALL">ALL</option>
                        <option value="INTERNAL">INTERNAL</option>
                        <option value="EXTERNAL">EXTERNAL</option>
                        <option value="NO-RMA">NO-RMA</option>
                        <option value="EXTERNALNORMA">EXTERNAL+NO-RMA</option>
                    </select>
                </div>
                <div class="col-xs-2">
                    <input type="button" class="btn btn-success box-search" name="btn-search" id="btn-search" value="Search">
                </div>
            </div>
        </div>
        <div class="v-content">
            <table class="table table-hover  table-condensed table-striped" id="fctable" style="margin-top:1%">
                <caption class="tb-caption">PROJECT SHIPMENT MARGIN</caption>
                <thead id="fchead"></thead>
                <tbody id="fccontent"></tbody>
            </table>
        </div>
    </div>
</div>


<div class="modal fade" id="shipdetaildata" tabindex="-1" role="dialog" style="margin-top:10%">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="shipdetaillabel"></h4>
            </div>
            <div class="modal-body">
                <div class="row" style="padding-left:15px;padding-right:15px;">
                    <table class="table table-hover table-striped" id="shipdetailtable">
                        <thead id="shipdetailhead" name="shipdetailhead"></thead>
                        <tbody id="shipdetailbody" name="shipdetailbody"></tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>
