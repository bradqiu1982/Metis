
@{
    ViewBag.Title = "HydraMachineUsage";
    Layout = "~/Views/Shared/_LayoutGantt.cshtml";
}

<link type="text/css" rel="stylesheet" href="~/Content/bootstrap-datepicker/bootstrap-datepicker.min.css" />
<link type="text/css" rel="stylesheet" href="~/Scripts/jquery-autocomplete/jquery.auto-complete.css" />
<link type="text/css" rel="stylesheet" href="~/Content/SCRAP-RATE.css" />
<link type="text/css" rel="stylesheet" href="~/Scripts/bootstrap-tagsinput/bootstrap-tagsinput.css" />
<script type="text/javascript" src="~/Scripts/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>

<script type="text/javascript" src="~/Scripts/bootstrap-tagsinput/bootstrap-tagsinput.js"></script>
<script type="text/javascript" src="~/Scripts/bootstrap-tagsinput/bootstrap3-typeahead.js"></script>
<script type="text/javascript" src="~/Scripts/jquery-autocomplete/jquery.auto-complete.min.js"></script>
<script type="text/javascript" src="~/Scripts/machine.js"></script>
<script type="text/javascript">
        $(function(){
            MACHINE.HYDRAINIT();
        })
</script>


<div class="row">
    <div class="nav navbar-nav navbar-left">
        <img src="~/Content/images/Yield.png" style="height:40px; width:40px">
    </div>
    <div class="nav navbar-nav navbar-left">
        <ol class="breadcrumb" style="width:600px">
            <li><a data-toggle="tooltip" title="Goto Main Page" href="/Main/Index">Main</a></li>
            <li class="active">Hydra Machine Usage</li>
        </ol>
    </div>
</div>

<div class="row">
    <nav class="col-xs-2 nav-sidebar">
        <ul class="nav">
            <li>
                <a href="/Machine/DepartmentMachine">
                    <span class="item-show">Department Machine</span>
                </a>
            </li>
            <li>
                <a href="/Machine/ProductMachine">
                    <span class="item-show">Product Machine</span>
                </a>
            </li>
            <li class="active">
                <a href="/Machine/HydraMachineUsage">
                    <span class="item-show">Hydra Machine</span>
                </a>
            </li>
        </ul>
    </nav>
    <div class="col-xs-10">
        <div class="v-container">
            <div class="v-filter">
                <div class="row row-margin">
                    <div class="col-xs-2">@Html.DropDownList("hydratesterlist", null, new { @id = "hydratesterlist", @class = "form-control" })</div>
                    <div class="col-xs-3">
                        <div class="input-group date" data-date=""
                             data-date-format="yyyy-mm-dd">
                            <input type="text" class="form-control"
                                   id="sdate" name="sdate" value="" readonly>
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-th"></span>
                            </span>
                        </div>
                    </div>
                    <div class="col-xs-1">~</div>
                    <div class="col-xs-3">
                        <div class="input-group date" data-date=""
                             data-date-format="yyyy-mm-dd">
                            <input type="text" class="form-control"
                                   id="edate" name="edate" value="" readonly>
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-th"></span>
                            </span>
                        </div>
                    </div>
                    <div class="col-xs-2">
                        <input type="button" class="btn btn-success" name="btn-search" id="btn-search" value="Search">
                    </div>
                </div>
            </div>
            <div class="v-content" id="chart-content" name="chart-content">
            </div>
            <div class="v-content">
                <table class="table table-hover  table-condensed table-striped" id="testyieldtable" style="margin-top:1%">
                    <caption class="tb-caption">MACHINE RUNING STATUS TABLE</caption>
                    <thead>
                        <tr>
                        <th>Status</th>
                        <th>StartTime</th>
                        <th>EndTime</th>
                        <th>PendingHour</th>
                        <th>TotalPendingHour</th>
                        </tr>
                    </thead>
                    <tbody id="testyieldcontentid"></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
